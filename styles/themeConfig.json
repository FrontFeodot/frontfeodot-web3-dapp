{
  "palette": {
    "mode": "dark",
    "primary": {
      "main": "#FF6F00",
      "dark": "#E65A00",
      "contrastText": "#FFFFFF"
    },
    "secondary": {
      "main": "#FFA040",
      "dark": "#CC8333",
      "contrastText": "#FFFFFF"
    },
    "background": {
      "default": "linear-gradient(135deg, #2C003E 0%, #190023 70%, #FF6F00 110%)",
      "paper": "#1F1F1F"
    },
    "text": {
      "primary": "#F0EDE5",
      "secondary": "#C3BDB5",
      "disabled": "#767270"
    },
    "tonalOffset": 0.2
  },
  "components": {
    "MuiCssBaseline": {
      "styleOverrides": {
        "body": {
          "background": "linear-gradient(135deg, #190023 0%, #2c003e 70%, #FF6F00 110%)"
        }
      }
    },
    "MuiButton": {
      "styleOverrides": {
        "root": {
          "borderRadius": 8,
          "textTransform": "none",
          "padding": "8px 24px",
          "transition": "background-color 200ms ease, transform 150ms ease",
          "&:hover": {
            "backgroundColor": "#E65A00",
            "transform": "translateY(-1px)"
          }
        }
      }
    },
    "MuiAppBar": {
      "styleOverrides": {
        "colorPrimary": {
          "backgroundColor": "#1F1F1F"
        }
      }
    },
    "MuiTooltip": {
      "styleOverrides": {
        "tooltip": {
          "backgroundColor": "#33221A",
          "fontSize": "0.875rem"
        }
      }
    }
  }
}
